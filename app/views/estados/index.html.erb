<% if instance_variable_get("@plaza") %>
    <h3 class='container_title' id='related_object_title'>Relacionado</h3>
    <div class='related_object_container' >
        <h4>Plaza</h4>
        
        <p><i>Nombre: </i><%= @plaza.nombre %></p>
        
        <div class='related_object_links'>
            <%= link_to "Atrás", plazas_path %>
        </div>
    </div>
<% end %>

<h3 id='listing_title_for_table' class='container_title'>Estados</h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name1'>Nombre</th>
  </tr>
  
<% @estados.each do |estado| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h estado.nombre %></div> <p> <%= link_to "Plazas", :controller => :plazas, :action => :some, :id => estado, :tipo => "Estado" %></p>
    </td>
    <td><%= button_to 'Mostrar', estado, :method => :get %></td>
    <td><%= if_es_admin do button_to 'Modificar', edit_estado_path(estado), :method => :get  end %></td>
    <td><%= if_es_admin do button_to 'Eliminar', estado, :confirm => '¿Eliminar registro?', :method => :delete end %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate(@estados, :prev_label => "Anterior", :next_label => "Siguiente") if es_paginable?(@estados) %>

<%= if_es_admin do button_to 'Nuevo estado', new_estado_path, :method => :post end %>