<% if instance_variable_get("@plaza") %>
    <%= render :partial => 'compartidos/anterior_fue_plaza', :locals => {:plaza => @plaza}%>
<% end %>
<% c, modelo_plural_o_singular = modelo_info("Estado", @estados.length) %>

<h3 id='listing_title_for_table' class='container_title'><%= modelo_plural_o_singular %></h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name1'>Nombre</th>
  </tr>
  
<% @estados.each do |estado| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h estado.nombre %></div> <p> <%= link_to "Plazas", :controller => :plazas, :action => :some, :id => estado, :tipo => "Estado" %></p>
    </td>
    <td><%= button_to 'Mostrar', estado, :method => :get %></td>
    <td><%= button_to 'Modificar', edit_estado_path(estado), :method => :get %></td>
    <td><%= button_to 'Eliminar', estado, :confirm => 'Â¿Eliminar registro?', :method => :delete %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate(@estados, :prev_label => "Anterior", :next_label => "Siguiente") %>

<%= button_to 'Nuevo estado', new_estado_path, :method => :post %>
