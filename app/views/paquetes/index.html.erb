<% if instance_variable_get("@plaza") %>
    <%= render :partial => 'compartidos/anterior_fue_plaza', :locals => {:plaza => @plaza} %>
<% elsif instance_variable_get("@servicio") %>
    <%= render :partial => 'compartidos/anterior_fue_servicio', :locals => {:servicio => @servicio} %>
<% elsif instance_variable_get("@incorporado") %>
    <%= render :partial => 'compartidos/anterior_fue_incorporado', :locals => {:incorporado => @incorporado} %>
<% end %>

<% c, modelo_plural_o_singular = modelo_info("Paquete", @paquetes.length) %>

<h3 id='listing_title_for_table' class='container_title'><%= modelo_plural_o_singular %></h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name2'>Nombre</th>    
  </tr>
  
<% @paquetes.each do |paquete| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h paquete.nombre %></div> 
        <p> <%= link_to "Plazas", :controller => :plazas, :action => :some, :id => paquete, :tipo => "Paquete" %></p>
        <p> <%= link_to "Servicios", :controller => :servicios, :action => :some, :id => paquete, :tipo => "Paquete" %></p>
    </td>    
    
    <td><%= button_to 'Mostrar', paquete, :method => :get %></td>
    <td><%= button_to 'Modificar', edit_paquete_path(paquete), :method => :get  %></td>
    <td><%= button_to 'Eliminar', paquete, :confirm => 'Â¿Eliminar registro?', :method => :delete %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate @paquetes, :prev_label => "Anterior", :next_label => "Siguiente" %>

<%= button_to 'Nuevo paquete', new_paquete_path, :method => :post %>