<% if instance_variable_get("@categoria") %>
    <%= render :partial => 'compartidos/anterior_fue_categoria', :locals => {:categoria => @categoria}%>
<% elsif instance_variable_get("@concepto") %>
    <%= render :partial => 'compartidos/anterior_fue_concepto', :locals => {:concepto => @concepto}%>
<% elsif instance_variable_get("@presentacion") %>

<% end %>

<h3 id='listing_title_for_table' class='container_title'>Servicios</h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name1'>Concepto de Servicio</th>
    <th class='attribute_name_table' id='a_name2'>Detalles del Servicio</th>
  </tr>
  
<% @servicios.each do |servicio| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h servicio.con_concepto %></div> <p> <%= link_to "Concepto", :controller => :conceptos, :action => :some, :id => servicio, :tipo => "Servicio" %></p><p><%= link_to "Categoria", :controller => :categorias, :action => :some, :id => servicio, :tipo => "Servicio" %></p>
    </td>

    <td class='attribute_value_table' id='a_value2'>
        <div><%=h servicio.detalles_ %></div>
    </td>
    <td><%= button_to 'Mostrar', servicio, :method => :get %></td>
    <td><%= if_es_admin do button_to 'Modificar', edit_servicio_path(servicio), :method => :get  end %></td>
    <td><%= if_es_admin do button_to 'Eliminar', servicio, :confirm => 'Â¿Eliminar registro?', :method => :delete end %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate @servicios, :prev_label => "Anterior", :next_label => "Siguiente" %>

<%= if_es_admin do button_to 'Nuevo servicio', new_servicio_path, :method => :post end %>