<div id='contenedor_de_resultados'>
    <div class='cerrar' onclick="<%= remote_function(:url => {:action => :esconde_div}, 
                                                             :with=> "'div_id='+'area_de_resultados'")%>">x</div>
    Encontrados <b><%=h @resultados.total_entries %> resultados</b> que contienen: <%=h @cosa_a_buscar %>
    
    <div id='resultados'>
        <% @resultados.each do |resultado| %>
            <div class='resultado'>
                <% datos= resultado.expose %>
                <b>> <%=h datos[0] %> </b> <%=h datos[1] %>   
                <div class='boton_derecha'>
                    <%= button_to_remote "MÃ¡s Detalle", :url=> {:action => :detalle, :id => resultado.id},
                                                        :with => "'tipo='+'#{resultado.class.to_s}'" %>
                    
                </div>             
            </div>
        <% end %>
    </div>
</div>
