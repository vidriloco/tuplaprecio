<h3 id='listing_title_for_table' class='container_title'>Roles</h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name1'>Nombre</th>
  </tr>
  
<% @roles.each do |rol| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h rol.nombre %></div> <p> <%= link_to "Usuarios", :controller => :usuarios, :action => :some, :id => rol, :tipo => "Rol" %></p>
    </td>
    <td><%= button_to 'Mostrar', rol, :method => :get %></td>
    <td><%= if_es_admin do button_to 'Modificar', edit_rol_path(rol), :method => :get  end %></td>
    <td><%= if_es_admin do button_to 'Eliminar', rol, :confirm => 'Â¿Eliminar registro?', :method => :delete end %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate @roles, :prev_label => "Anterior", :next_label => "Siguiente" %>

<%= if_es_admin do button_to 'Nuevo rol', new_rol_path, :method => :post end %>