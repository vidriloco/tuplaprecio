<% if instance_variable_get("@plaza") %>
    <%= render :partial => 'compartidos/anterior_fue_plaza', :locals => {:plaza => @plaza}%>
<% elsif instance_variable_get("@servicio") %>
    <%= render :partial => 'compartidos/anterior_fue_servicio', :locals => {:servicio => @servicio} %>
<% end %>

<% c, modelo_plural_o_singular = modelo_info("Especializado", @especializados.length) %>

<h3 id='listing_title_for_table' class='container_title'><%= modelo_plural_o_singular %></h3>
<br>
<table>
  <tr>
    <th class='attribute_name_table' id='a_name1'>Activo</th>
    <th class='attribute_name_table' id='a_name2'>Costo</th>
  </tr>
<% c, modelo_plural_o_singular = modelo_info("Especializado", @especializados.length) %>
 
<% @especializados.each do |especializado| %>
  <tr>
    <td class='attribute_value_table' id='a_value1'>
        <div><%=h especializado.activo_ %></div>
        <p>
        <%= link_to "Plaza", :controller => :plazas, :action => :some, :id => especializado, :tipo => "Especializado" %>
        </p>
        <p>
        <%= link_to "Servicio", :controller => :servicios, :action => :some, :id => especializado, :tipo => "Especializado" %>
        </p>
        
    </td>
    
    <td class='attribute_value_table' id='a_value2'>
        <div><%=h especializado.costo_ %></div>
    </td>
    <td><%= button_to 'Mostrar', especializado, :method => :get %></td>
    <td><%= button_to 'Modificar', edit_especializado_path(especializado), :method => :get %></td>
    <td><%= button_to 'Eliminar', especializado, :confirm => 'Â¿Eliminar registro?', :method => :delete %></td>
  </tr>
  
<% end %>
</table>

<%= will_paginate(@especializados, :prev_label => "Anterior", :next_label => "Siguiente") %>

<%= button_to 'Nuevo especializado', new_especializado_path, :method => :post %>
