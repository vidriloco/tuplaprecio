<h3 class='admin_modelo_titulo'>Usuario</h3>
<div class='container_admin'>
    
<% @usuario.password = @usuario.password_confirmation = nil %>
<div class='form'>
    <div id="errores_usuario" class="errorExplanation" style="display:none"></div>
    
<% form_remote_for(@usuario) do |f| -%>

<p><%= label_tag 'nombre' %><br/>
<%= f.text_field :nombre %></p>

<p><%= label_tag 'login' %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'password', 'Contraseña' %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Confirma Contraseña' %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= label_tag 'rol' %><br/>
<%= f.collection_select :rol_id, @roles, :id, :nombre, {}, {:onchange => remote_function(:url => {:action => 'cambios_de_div'}, :with => "'id='+this.value"), :include_blank => true} %>
</p>

<div id="usuario_plaza_form">
<% unless @usuario.responsabilidad_id.nil? %>    
    <%= render :partial => "usuario_plaza_form", :locals => {:plazas => @plazas} %>
<% end %>
</div>

<p><%= submit_tag 'Registrar' %>| <%= link_to_remote "Cerrar", 
                                      :url => {:controller => 'administraciones', :action => 'restaura_modelo_barra'},
                                      :with => "'modelo=#{modelo}'" %>
</p>
<% end -%>
</div>


</div>