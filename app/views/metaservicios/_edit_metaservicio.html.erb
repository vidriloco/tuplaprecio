<h3 class='admin_modelo_titulo'>Metaservicio</h3>
<div class='container_admin'>
    <div class='form'>

    <% form_remote_for(:metaservicio, @metaservicio, :url => metaservicio_path(@metaservicio), 
                       :html => {:method => :put}) do |f| %>
  

    <%= render :partial => "form_metaservicio", :locals => {:f => f, :metaconceptos => @metaconceptos}%>
      
      <p>
        <%= f.submit 'Guardar cambios' %> | <%= link_to_remote "Cerrar", 
                                          :url => {:controller => 'administraciones', :action => 'restaura_modelo_barra'},
                                          :with => "'modelo=#{modelo}'" %>
      </p>
    <% end %>

</div>


</div>